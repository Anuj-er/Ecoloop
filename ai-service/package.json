{
  "name": "ecoloop-ai-service",
  "version": "1.0.0",
  "description": "AI image analysis service for EcoLoop marketplace",
  "main": "app.py",
  "scripts": {
    "start": "python app.py",
    "dev": "FLASK_ENV=development python app.py",
    "install": "pip install -r requirements.txt",
    "test": "python -m pytest tests/ -v",
    "lint": "flake8 app.py",
    "docker-build": "docker build -t ecoloop-ai-service .",
    "docker-run": "docker run -p 5000:5000 ecoloop-ai-service"
  },
  "keywords": [
    "ai",
    "image-analysis",
    "flask",
    "tensorflow",
    "computer-vision",
    "marketplace",
    "sustainability"
  ],
  "author": "EcoLoop Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecoloop/ecoloop-ai-connect"
  },
  "engines": {
    "python": ">=3.8"
  },
  "dependencies": {
    "flask": "^2.3.3",
    "tensorflow": "^2.13.0",
    "pillow": "^10.0.1",
    "opencv-python": "^4.8.1.78",
    "numpy": "^1.24.3",
    "requests": "^2.31.0"
  },
  "devDependencies": {
    "pytest": "^7.4.0",
    "flake8": "^6.0.0"
  }
}
